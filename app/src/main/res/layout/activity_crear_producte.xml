<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearProducteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonCrear"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <EditText
            android:id="@+id/editTextNomProducte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nom Producte"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextDescripcioProducte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="DescripciÃ³"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPreuProducte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Preu producte"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonCrearProducte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Producte" />

        <Button
            android:id="@+id/producteUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTUALITZAR PRODUCTE" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>